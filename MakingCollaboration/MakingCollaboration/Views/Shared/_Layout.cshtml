<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    
    
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">                 
                    <li class="active"><a href="/Home/Index">All</a></li>
                    <li><a href="/Home/Index">Top</a></li>
                    <li><a href="/Home/Index">Controversial</a></li>
                </ul>
            
             
                <div class="pull-right">
               
                    <ul class="nav navbar-nav">
                        <li><input type="text" class="form-control" data-action="grow" placeholder="Search" style="width: 180px; margin-top: 10px;"></li>
                        <li><img class="avatar" src="/Content/avatar.png" alt="" /></li>
                   
                    </ul>
                </div>
            </div><!--/.nav-collapse -->
        </div>
    </nav>
    

<div class="container body-content">
    @RenderBody()
    <hr />
  
</div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    
    <script src="/Scripts/index.js"></script>
</body>
</html>
